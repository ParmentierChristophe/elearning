{% extends "CoreBundle::adminLayout.html.twig" %}

{# rewrite the sub_title block to tell the visitor where he is #}
{% block sub_title %}{{ parent()}} Administration{% endblock %}

{% block main %}
    <h2>Détails du module</h2>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ module.title }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ module.duration }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ module.difficulty }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_module_index') }}">Retour à la liste des modules</a>
        </li>
        <li>
            <a href="{{ path('admin_module_edit', { 'id': module.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
