{% extends "CoreBundle::adminLayout.html.twig" %}

{# rewrite the sub_title block to tell the visitor where he is #}
{% block sub_title %}{{ parent()}} Administration{% endblock %}

{% block main %}
    <h1>Détail du parcours</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ path.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ path.title }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ path.duration }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ path.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_path_index') }}">Retour à la liste des parcours</a>
        </li>
        <li>
            <a href="{{ path('admin_path_edit', { 'id': path.id }) }}">Modifier</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
