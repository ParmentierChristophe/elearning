{% trans_default_domain 'FOSUserBundle' %}
<div>
  <!-- Link to the register page if not member yet -->
  <div>
    <h3>Pas encore membre ?</h3>
    <p><a href="{{ path('fos_user_registration_register')}}"><i class="fa fa-user-plus fa-2x" aria-hidden="true"></i> Cliquez ici</a></p>
  </div>

  <!-- Error message if connection failled -->
  {% if error %}
      <div class="alert-danger py-2 px-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <!-- Login form -->
  <div>
    <h3>Déjà membre ?</h3>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <p>
          <label for="username">{{ 'security.login.username'|trans }}</label>
          <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </p>

        <p>
          <label for="password">{{ 'security.login.password'|trans }}</label>
          <input type="password" id="password" name="_password" required="required" />
        </p>

        <p>
          <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
          <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </p>

        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>
  </div>
</div>
